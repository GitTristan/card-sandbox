<%= link_to "New", new_transaction_path(@transaction), class: "btn btn-primary pull-right" %>

<h1>Transactions</h1>

<table class='table'>
  <thead>
    <tr>
      <th><strong>Amount</strong></th>
      <th><stong>Card Number</strong></th>
      <th><stong>Exp Date</strong></th>
      <th><stong>CVV</strong></th>
    </tr>
  </thead>

  <% @transaction.each do |transaction| %>
    <tr>
      <td><%= transaction.amount %></td>
      <td><%= transaction.card_number %></td>
      <td><%= transaction.exp_date %></td>
      <td><%= transaction.cvv %></td>
    </tr>
  <% end %>
</table>
